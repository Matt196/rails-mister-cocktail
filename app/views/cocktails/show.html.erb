<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h1><%= @cocktail.name %></h1>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %>: <%= dose.description%></li>
        <% end %>
      </ul>
      <%= link_to 'Add Doses', '#'  %>
    </div>
  </div>
</div>
