<div class="jumbotron">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://marinaclubvw.com/wp-content/uploads/2016/10/cocktail4-1.jpg')">
    <div class="banner-content">
      <h1>Drink it</h1>
      <p>The best cocktails in the world, for you</p>
      <%= link_to 'Drink', '#', class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>

<div class="wrapper text-center">
  <div class="container">
    <h2>Nos cocktails</h2>
    <div class="row">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <div class="col-xs-12 col-sm-4">
            <div class="card">
              <%= link_to cocktail_path(cocktail) do %>
                <div class="card-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo.path, height: 300, width: 400, crop: :fill %>')">
                </div>
                <div class="card-body">
                  <h3><%= cocktail.name %></h3>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

